{% extends 'base.twig' %}

{% block content %}
    <div id="login_box">
        <h1 class="my-4">{{ lang('login.notice') }}</h1>
        <a href="{{ steam.login_url }}" class="btn btn-dark btn-lg px-4 py-3">
            <i class="fab fa-steam"></i>
            {{ lang('login.steam') }}
        </a>
        <br>
        <div class="form-check my-2 px-0">
            <div class="btn btn-primary">
                <input class="form-check-input" type="checkbox" id="remember_me"
                       {% if cookies.remember_me == 1 %}checked{% endif %}>
                <label class="form-check-label" for="remember_me">
                    {{ lang('remember_me') }}
                </label>
            </div>
        </div>
    </div>
{% endblock %}