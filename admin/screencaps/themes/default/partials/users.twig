<div class="row my-2">
    {% for user in users %}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card user {% if user.streaming %}streaming{% endif %}">
                <div class="card-body p-3">
                    <div class="user-avatar">
                        <img class="avatar medium rounded--square bordered"
                             src="{{ steaminfo[user.steamid].avatarfull }}">
                    </div>
                    <div class="user-stats">
                        <h5 class="card-title my-1"><a class="username"
                                                       href="{{ route('user', [user.steamid]) }}">{{ steaminfo[user.steamid].personaname }}</a>
                        </h5>
                        <span class="user-stat"><i class="fas fa-camera"></i> {{ user.screenshots }}</span>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>